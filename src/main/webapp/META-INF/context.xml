<Context docBase="officeCharacterAPI" path="/officeCharacterAPI" reloadable="true">
    <Realm className="org.apache.catalina.realm.JDBCRealm"
           driverName="com.mysql.cj.jdbc.Driver"
           connectionURL="jdbc:mysql://localhost:3306/Office_Characters?user=tomcat&amp;password=tomcat"
           userTable="user" userNameCol="username" userCredCol="password"
           userRoleTable="role" roleNameCol="role_name" >

        <CredentialHandler
                className="org.apache.catalina.realm.MessageDigestCredentialHandler"
                algorithm="sha-256"
                encoding="UTF-8" />
    </Realm>
</Context>